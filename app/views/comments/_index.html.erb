<ul>
  <% comments.each do |comment| %>
    <% unless comment.id.nil? %>
      <li>
        <p class="left"><%= comment.user.name %>さんがコメントしました。</p>
        <p class="left-content" id="comment<%= comment.id %>"><%= comment.content %></p>
        <% if current_user.id == comment.user.id %>
          <p class="right">
            <%= link_to "", edit_topic_comment_path(topic, comment), remote: true, name: 'edit', class: "fa fa-pencil-square-o fa-lg", 'data-toggle' => "modal", locals: { comment: @comments, topic: @topic } %>
            <%= link_to '', topic_comment_path(topic, comment), class: "fa fa-trash-o fa-lg", method: :delete, remote: true, data: { confirm: '本当に削除していいですか？' } %>
          </p>
        <% end %>
      </li>
    <% end %>
  <% end %>
</u>
