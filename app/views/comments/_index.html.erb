<ul>
  <% comments.each do |c| %>
    <% unless c.id.nil? %>
    <li>
      <p class="left">
        <%= c.user.name %>さんがコメントしました
      </p>
      <p class="left">
        <%= c.content %>
      </p>
      <% if current_user.id == c.user.id %>
        <p class="right">
          <%= link_to "", edit_topic_path(topic, c), class: "fa fa-pencil-square-o fa-lg" %>
          <%= link_to "", topic_comment_path(topic, c), class: "fa fa-trash-o fa-lg", method: :delete, remote: true, data:{confirm: "本当に削除してよろしいですか？"} %>
        </p>
      <% end %>
    </li>
    <% end %>
  <% end %>
</ul>
