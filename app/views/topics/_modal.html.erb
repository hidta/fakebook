<div class="modal-dialog">
  <div class="modal-content">
    <%= form_for(@topic, authenticity_token: true, remote: true ) do |f| %>
    <div class="modal-header">
      <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
      </button>
      <% if action_name == 'new'%>
        <h4 class="modal-title">投稿作成</h4>
      <% else %>
        <h4 class="modal-title">投稿編集</h4>
      <% end %>
      <%= f.error_messages! %>
    </div>
    <div class="modal-body">
      <div class="field form-inline">
        <%= f.label :title, class: "sr-only" %>
        <%= f.text_field :title, placeholder: "タイトル", class: "form-control" %>
      </div><br />
      <div class="field form-inline">
        <%= f.label :content, class: "sr-only" %>
        <%= f.text_field :content, placeholder: "コメント", class: "form-control" %>
      </div><br />
      <div class="field form-inline">
        <%= f.label :topic_img %>
        <%= f.file_field :topic_img, class: "center-block fileupbtn" %>
        <%= f.hidden_field :topic_img_cache %>
      </div><br />
    </div>
    <div class="modal-footer">
     <div class="actions form-inline">
      <%= f.submit "Posting", class: 'btn btn-primary' %>
     </div>
    </div>
    <% end %>
  </div>
</div>